@model IEnumerable<Task.Models.MonthWiseCustomerReport>
@{
    ViewBag.Title = "Month wise Customer Report With Products";
}
<center>
    <h2>
        Monthwise Customer Report With Products
    </h2>
    <br />
    <br />
    <table class="table table-bordered table-responsive table-hover table-striped">
        <tr>
            <th>Month</th>
            <th>Customer Name</th>
            <th>Amount</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DateOfPurchase.ToString("MMMM")- @item.DateOfPurchase.Year</td>
                <td>@item.CustomerName.CustomerName</td>

                <td>@item.Amount.Amount</td>
            </tr>
        }
    </table>
</center>